[MASTER]

# Add <file or directory> to the black list. It should be a base name, not a path. You may set this option multiple times.
ignore=.git,fabfile.py,migrations

disable=
    no-member,
    missing-function-docstring,
    missing-class-docstring,
    too-few-public-methods,
    import-outside-toplevel,
    missing-module-docstring,
    invalid-name,
    abstract-method,
    too-many-arguments,
    too-many-ancestors,
    too-many-public-methods,
    # too-many-nested-blocks,
    # too-many-branches,
    #too-many-statements,

    # TODO: Refactor to enable these rules
    wrong-import-order,
    consider-using-enumerate,
    too-many-instance-attributes,
    not-an-iterable,
    arguments-differ,
    unnecessary-comprehension,
    keyword-arg-before-vararg,
    unused-argument,
    signature-differs,
    broad-except,
    no-self-argument,
    attribute-defined-outside-init,
    too-many-locals,
    protected-access,
    fixme,
    cyclic-import,
    access-member-before-definition,
    duplicate-code,
    import-error,
    line-too-long,
    raise-missing-from

[FORMAT]
# Limite máximo de linhas por módulo (C0302)
max-module-lines=1200
